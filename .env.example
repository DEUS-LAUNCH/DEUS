# =============================================================================
# ENVIRONMENT VARIABLES FOR TOKEN LAUNCHPAD
# =============================================================================
# Copy this file to .env and fill in your values

# Pinata JWT token for IPFS uploads
# Get one at: https://app.pinata.cloud/developers/api-keys
PINATA_JWT=your_pinata_jwt_token_here

# Your wallet's private key in Base58 format
# This wallet pays for transaction fees and receives platform fees
# ⚠️ NEVER SHARE THIS KEY - KEEP IT SECRET
WALLET_SECRET=your_base58_encoded_private_key_here

# Solana RPC URL (recommended: use a paid RPC like Helius, QuickNode, etc.)
# Free fallback: https://api.mainnet-beta.solana.com
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Admin wallet public key (optional)
# This wallet can bypass certain restrictions like forbidden words
ADMIN_WALLET=your_admin_wallet_public_key_here

# Server port (optional, defaults to 3000)
PORT=3000

# Set to 'true' when deploying on Render.com (affects file paths)
# RENDER=true
